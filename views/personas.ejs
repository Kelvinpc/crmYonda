<%- include('partials/header') %>

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Tables</h1>


        <!-- DataTales Example -->
        <div class="card shadow mb-4">



            <div class="card-body">

                <div class="row">

                    <div class="card-header col-md-4 py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Clientes</h6>
                    </div>
                    <div class="card-header col-md-4 py-3">
                    </div>
                    <div class="card-header col-md-4 py-3">
                        
                        <!-- <a href="/create" class="btn btn-primary" >Nuevo cliente</a> -->

                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
                            Nuevo cliente
                        </button>
                        
                        <!-- Modal -->
                        <div class="modal fade" id="staticBackdrop" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="">
                                    <form action="/create" method="post" autocomplete="off" id="formulario-registro">
                                        <div class="card ">
                                            <div class="card-header bg-primary text-light">Registrar datos de la persona</div>
                                            <div class="card-body">
                                        <div class="row">

                                            <div class="col-md-6 mb-2">
                                                <div class="form-floating">
                                                    <input type="text" name="nombres" id="nombre" class="form-control" placeholder="Nombre">
                                                    <!-- <label for="form-label">Modelo</label> -->
                                                </div> 
                                            </div>
                                                
                                            <div class="col-md-6 mb-2">
                                                <div class="form-floating"  >
                                                    <input type="text" name="apellidos" id="apellidos" class="form-control" placeholder="Apellidos">
                                                    <!-- <label for="form-label">Modelo</label> -->
                                                </div> 
                                                </div>
                                        </div>

                                        <div class="row">
                                                <div class="form-floating col-md-4 mb-2">
                                                <input type="text" class="form-control" name="email" id="email" placeholder="E-mail" required>
                                                <!-- <label for="duracionhoras">Apellidos</label> -->
                                                </div>

                                                <div class="form-floating col-md-4 mb-2">
                                                <input type="text" class="form-control" name="telefono" id="telefono" placeholder="Telefono" required>
                                                <!-- <label for="duracionhoras">Apellidos</label> -->
                                                </div>

                                                <div class="input-group mb-2 col-md-4">
                                                    <select name="idorigen" class="custom-select" id="inputGroupSelect02">
                                                        <option selected disabled>Selecciona</option>
                                                <% origenes.forEach(origenes => { %>
                                                    <option value="<%= origenes.idorigen %>"><%= origenes.origen %></option>
                                                <% }) %>
                                                        <!-- <option value="1">Facebook</option>
                                                        <option value="2">Instagram</option>
                                                        <option value="3">Carteles</option>
                                                        <option value="3">Anuncios</option> -->



                                                    </select>
                                                </div>


                                                <div class="row">

                                                <div class="input-group mb-2 col-md-4">
                                                    <select name="tipodoc" class="custom-select" id="inputGroupSelect02">
                                                        <option selected disabled>Selecciona</option>
                                                        <option value="1">DNI</option>
                                                        <option value="2">Pasaporte</option>
                                                        <option value="3">Carnet de extranjeria</option>
                                                    </select>
                                                </div>

                                                <div class="form-floating col-md-4 mb-2">
                                                    <input type="text" name="numdoc" class="form-control" id="duracionhoras" placeholder="Numero de documento" required>
                                                    <!-- <label for="duracionhoras">Apellidos</label> -->
                                                    </div>


                                                    <div class="form-floating col-md-4 mb-2">
                                                    <input type="text" class="form-control" name="fechanac" id="fechanac" placeholder="Fecha de nacimiento" required>
                                                    <!-- <label for="duracionhoras">Apellidos</label> -->
                                                    </div>

                                                </div>

                                        </div>

                                    
                                        </div> <!-- ./card -->

                                            <div class="modal-footer">
                                                <button type="reset" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-primary">Guardar</button>
                                            </div>

                                        </form>
                                    
                                    </div> <!-- ./container -->

                            </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="tabla"  cellspacing="0">
                        <colgroup>
                            <col style="width: 15.19%;">  <!-- nombres -->
                            <col style="width: 15.19%;">  <!-- apellidos -->
                            <col style="width: 2.53%;">   <!-- tipo doc -->
                            <col style="width: 3.80%;">   <!-- num doc -->
                            <col style="width: 7.59%;">   <!-- telefono -->
                            <col style="width: 5.06%;">   <!-- email -->
                            <col style="width: 6.33%;">   <!-- origen -->
                            <col style="width: 12.66%;">  <!-- estado -->
                            <col style="width: 31.65%;">  <!-- operaciones -->
                        </colgroup>
                        <thead>
                            <tr>
                                <!-- <th>Asesor</th> -->

                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Tipo de documento</th>
                                <th>Numero de documento</th>
                                <th>Telefono</th>
                                <th>Email</th>
                                <th>Origen</th>
                                <th>Estado</th>
                                <th>Operaciones</th>

                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <!-- <th>Asesor</th> -->

                                <th>Nombres</th>
                                <th>Apellidos</th>
                                <th>Tipo de documento</th>
                                <th>Numero de documento</th>
                                <th>Telefono</th>
                                <th>email</th>
                                <th>origen</th>
                                <th>Estado</th>
                                <th>Operaciones</th>


                            </tr>
                        </tfoot>
                        <tbody>
                            <% datosPersona.forEach(datosPersona => { %>
                                <tr>
                                    <!-- <td><%= datosPersona.nomuser %></td> -->
                                    
                                    <td><%= datosPersona.nombres %></td>
                                    <td><%= datosPersona.apellidos %></td>
                                    <td><%= datosPersona.tipodoc %></td>
                                    <td><%= datosPersona.numdoc %></td>
                                    <td><%= datosPersona.telefono %></td>
                                    <td><%= datosPersona.email %></td>
                                    <td><%= datosPersona.origen %></td>
                                    <td><%= datosPersona.estado %></td>

                                    <td>
                                        <a href="/edit/<%= datosPersona.idpersona %>" class="btn btn-sm btn-info">Editar</a>
                                        <a href="/delete/<%= datosPersona.idpersona %>" class="btn btn-sm btn-danger delete">Eliminar</a>
                                    </td>

                                </tr>
                            <% }) %>
                        </tbody>
                        
                    </table>
                </div>                   
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<script>
    const tabla = document.querySelector("#tabla");
    const dataTable = new DataTable(tabla);

</script>

<%- include('partials/footer') %>
